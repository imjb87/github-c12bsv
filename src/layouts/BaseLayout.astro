---
import client, { defaultRequestConfig as reqConfig } from '../storyblokClient'
import Navigation from '../components/Navigation.jsx'
import Footer from "../components/Footer.astro"
const { data: { story } } = await client.get('cdn/stories/settings', reqConfig)
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Floor Screeders Huddersfield | Fast Flow</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">    
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
  </head>

  <body>
    <Navigation settings={story} client:load />
    <slot />
    <Footer settings={story} />
  </body>
</html>