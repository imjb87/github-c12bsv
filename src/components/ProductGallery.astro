---
import ProductGalleryItem from "./ProductGalleryItem.astro"
const { blok } = Astro.props
---

<div>
  <div class="mx-auto max-w-md px-4 py-16 lg:py-24 text-center sm:max-w-3xl sm:px-6 lg:px-8 lg:max-w-7xl">
    <div class="mb-10 lg:mb-24">
      <h2 class="block text-4xl text-center text-gray-700 font-semibold tracking-tight uppercase">
        {blok.title_line_1}
      </h2>
      <h2 class="block text-4xl text-center text-gray-700 font-extrabold tracking-tight uppercase mb-3">
        {blok.title_line_2}
      </h2>
      <p class="block text-base text-sans text-gray-500">
        {blok.description}
      </p>
    </div>
    <div class="columns-1 md:columns-3">
      {blok.gallery_items.map(childBlok => (
        <ProductGalleryItem blok={childBlok} key={childBlok._uid} />
      ))}
    </div>
  </div>
</div>  