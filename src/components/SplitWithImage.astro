---
import client from '../storyblokClient'
const { blok } = Astro.props 
---

<div class="relative bg-white">
  <div class="relative md:my-12 lg:my-20 pt-12 pb-16 px-4 sm:pt-16 sm:px-6 lg:px-8 lg:max-w-7xl lg:mx-auto lg:grid lg:grid-cols-2">
    <div
      class={`lg:absolute lg:inset-0 ${
        blok.switch_layout ? "lg:col-start-2" : ""
      }`}
    >
      <div
        class={`lg:absolute lg:inset-y-0 lg:left-0 ${
          blok.switch_layout ? "lg:w-full" : "lg:w-1/2"
        }`}
      >
          <img
            class="h-56 w-full object-cover lg:absolute lg:h-full"
            src={blok.image}
            alt=""
          />
      </div>
    </div>
    <div
      class={`${
        blok.switch_layout
          ? "lg:pr-8 lg:col-start-1"
          : "lg:pl-8 lg:col-start-2"
      }`}
    >
      <div
        class={`text-base max-w-prose mx-auto mt-9 lg:mt-0 lg:max-w-lg ${
          blok.switch_layout ? "lg:mr-auto lg:ml-0" : "lg:ml-auto lg:mr-0"
        }`}
      >
          <h2 class="leading-7 text-yellow-500 font-extrabold tracking-wide uppercase">
            {blok.small_title}
          </h2>
          <h3 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-700 sm:text-4xl uppercase leading-none">
            <span class="font-semibold">
              {blok.large_title_first_line}
            </span>
            <br />
            <span class="font-extrabold">
              {blok.large_title_second_line}
            </span>
          </h3>
          <div class="mt-8 text-base text-gray-500 show-bullets">
              {client.richTextResolver.render(blok.content)}
          </div>
      </div>
    </div>
  </div>
</div>