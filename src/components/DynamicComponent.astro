---
import Hero from "./Hero.astro"
import Feature from "./Feature.astro"
import Grid from "./Grid.astro"
import Placeholder from "./Placeholder.astro"
import Centered from "./Centered.astro"
import SplitWithImage from "./SplitWithImage.astro"
import OffsetSupportingText from "./OffsetSupportingText.astro"
import OffWhiteGrid from "./OffWhiteGrid.astro"
import GridWithOffsetIcons from "./GridWithOffsetIcons.astro"
import GridWithImage from "./GridWithImage.astro"
import SimpleJustifiedOnLightBrand from "./SimpleJustifiedOnLightBrand.astro"
import SplitTwoTone from "./SplitTwoTone.astro"
import SimpleCenteredBranded from "./SimpleCenteredBranded.astro"
import ProductGallery from "./ProductGallery.astro"

const { blok } = Astro.props

const components = {
  "feature": Feature,
  "grid": Grid,
  "hero": Hero,
  "main-content": Centered,
  "split-with-image": SplitWithImage,
  "faqs": OffsetSupportingText,
  "off-white-grid": OffWhiteGrid,
  "grid-offset-icons": GridWithOffsetIcons,
  "grid-with-image": GridWithImage,
  "simple-justified-on-light-brand": SimpleJustifiedOnLightBrand,
  "split-two-tone": SplitTwoTone,
  "simple-centered-branded": SimpleCenteredBranded,
  "product-gallery": ProductGallery
}

const Component = components[blok.component] ? components[blok.component] : Placeholder
---

<Component blok={blok} />